class Solution:
    def longestConsecutive(self, nums):
        n = len(nums)
        if n == 0:
            return 0 

        nums.sort()
        lastSmaller = float('-inf') 
        cnt = 0 
        longest = 1 
        for i in range(n):
            if nums[i] - 1 == lastSmaller:
                cnt += 1 
                lastSmaller = nums[i] 
            elif nums[i] != lastSmaller:
                cnt = 1 
                lastSmaller = nums[i] 
            longest = max(longest, cnt) 
        return longest
